<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <PageSlider

        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:background_element="#a0b0c0">

    </PageSlider>

    <TabList
        ohos:id="$+id:tab_list"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:normal_text_color="#88888888"
        ohos:selected_text_color="#0aabbc"
        ohos:background_element="#ffffff"

        ohos:selected_tab_indicator_color="#0aabbc"
        ohos:tab_indicator_type="bottom_line"
        ohos:selected_tab_indicator_height="2vp"
        ohos:text_size="20vp"
        ohos:fixed_mode="true"
        ohos:text_alignment="center"
        ohos:layout_alignment="bottom">
    </TabList>

</StackLayout>