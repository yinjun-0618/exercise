<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="horizontal_center"
        ohos:text="动作添加"
        ohos:text_size="20fp"></Text>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent">




        <ScrollView
            ohos:height="250vp"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:id="$+id:exercise_add_dircetion"
                ohos:height="match_content"
                ohos:width="match_parent">



            </DirectionalLayout>

        </ScrollView>




    </DirectionalLayout>


    <Button
        ohos:id="$+id:exercise_add_button"
        ohos:text_alignment="horizontal_center"
        ohos:top_margin="20vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="添加"
        ohos:text_size="25fp">

    </Button>




</DirectionalLayout>