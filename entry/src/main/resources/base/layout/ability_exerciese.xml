<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


   <DirectionalLayout
       ohos:height="40vp"
       ohos:orientation="horizontal"
       ohos:width="match_parent">

       <Text
           ohos:height="match_parent"
           ohos:width="match_content"
           ohos:text="今日训练部位"
           ohos:text_size="15fp"></Text>

       <Picker
           ohos:wheel_mode_enabled="true"
           ohos:id="$+id:exercise_kind_pick"
           ohos:height="match_content"
           ohos:width="match_parent"
           ohos:selected_text_size="20fp"
           ohos:selector_item_num="1"
           ohos:background_element="#C89FDEFF">
       </Picker>
   </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:exercise_listDirection"
        ohos:height="match_content"
        ohos:width="match_parent">




    </DirectionalLayout>



<!--    自定义添加按钮-->
    <DirectionalLayout
        ohos:top_margin="15vp"
        ohos:height="40vp"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:width="match_parent">


        <Button
            ohos:id="$+id:exercise_add"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:text="自定义添加"
            ohos:background_element="$graphic:background_button_common"
            ohos:text_size="15fp">
        </Button>

    </DirectionalLayout>


<!--    开始训练按钮-->
    <DirectionalLayout
        ohos:top_margin="15vp"
        ohos:height="40vp"
        ohos:orientation="horizontal"
        ohos:alignment="horizontal_center"
        ohos:width="match_parent">


        <Button
            ohos:id="$+id:exercise_start"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:text="开始训练"
            ohos:background_element="$graphic:background_button_common"
            ohos:text_size="15fp">
        </Button>

    </DirectionalLayout>

</DirectionalLayout>